<nav class="navbar navbar-fixed-top navbar-default" class="col-md-12 col-sm-12 col-xs-12" >
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
              data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <button type="button" class="navbar-toggle collapsed"
              data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="cart-icon-mobile"><%= render 'shared/cart_icon_mobile' %></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-left">
        <% if @show_search %>
          <span class='show_search'>
            <%= form_tag books_path, method: :get, class: 'navbar-form navbar-left', role: 'search', remote: true do %>
            <p>
             <%= text_field_tag :search, params[:search], class: 'form-control', class: 'search', id: 'search', placeholder:'find a book...' %>
             <%= submit_tag 'Search', name: nil, class: 'btn btn-default' %>
            </p>
            <% end %>
          </span>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
              <ul class="nav navbar-nav" >
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <%= current_user.first_name %> <%= current_user.last_name %><span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Log out', '/logout', method: 'delete' %></li>
                </ul>
              </li>
            </ul>
        <% else %>
            <ul class="nav navbar-nav navba-right">
              <li>
                <%= link_to 'Login', '#anchor',  {'data-toggle':  'modal', 'data-target': '#login-modal'} %>
              </li>
              <li>
                <%= link_to 'Signup', '#anchor',  {'data-toggle':  'modal', 'data-target': '#signup-modal'} %>
              </li>
            </ul>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="<%= params[:controller] == 'books' ? 'active' : '' %>"><%= link_to 'Home', root_path %></li>
        <li class="<%= params[:controller] == 'about' ? 'active' : '' %>"><%= link_to 'About', about_index_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="cart-icon"><%= render 'shared/cart_icon' %></li>
      </ul>
    </div>
  </div>
</nav>


<script type="text/javascript" charset="utf-8">
    $('ul.nav li.dropdown').hover(function() {
        $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeIn(500);
    }, function() {
        $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeOut(500);
    });
</script>




