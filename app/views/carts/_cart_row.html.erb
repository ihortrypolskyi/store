  <div class="row">
    <div class="col-xs-2">
      <%= link_to book do %>
          <% if book.image? %>
              <%= image_tag book.image.url, class:'style_image' if book.image? %>
          <% else %>
              <img src="http://placehold.it/180x270" alt="...">
          <% end %>
      <% end%>

    </div>
    <div class="col-xs-6 text-left">
      <div><%= link_to book do %>
          <%= book.title %>
      <% end%>
      </div>
      <br>
      <div class="btn-group" role="group">
        <%= link_to 'Home', :root, class: 'btn btn-success' %>
        <%= link_to 'Remove', order_book, { data: { confirm: "Are you sure you wish to delete the book '#{order_book.book.title}' from your cart?" },
                                            method: :delete, remote: true, class: "btn btn-danger" } %>
        <%= link_to 'Back', :back, class: 'btn btn-success' %>
      </div>
    </div>
    <div class="col-xs-4">
      <%= form_for order_book, remote: true do |f| %>
          <div class="row">
            <div class="col-xs-4 text-center" >
              <span><%= number_to_currency order_book.unit_price, unit: 'грн.', format: '%n %u', precision: 0 %></span>
              <%= f.number_field :quantity, value: order_book.quantity.to_i, class: "form-control", min: 1 %>
              <%= f.hidden_field :book_id, value: book.id %>
            </div>
            <div class="col-xs-8 text-right">
              <span>Total: <%= number_to_currency order_book.total_price, unit: 'грн.',
                                                        format: '%n %u', precision: 0 %></span>
            </div>
          </div>
      <% end %>
    </div>
  </div>
  <hr>
