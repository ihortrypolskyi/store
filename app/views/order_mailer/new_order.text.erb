Thank you for order on Bookstore!

  <% @order.order_books.each do |order_book| %>

  <% if order_book.book.image? %>
      <%= image_tag order_book.book.image.url(:small), class:'style_image' if order_book.book.image? %>
  <% else %>
      <img src="http://placehold.it/180x270" alt="...">
  <% end %>

  <%= order_book.book.title %>
  <%= order_book.quantity %>

  <%= number_to_currency order_book.unit_price, unit: '₴', format: '%n %u', precision: 0 %>
  <%= number_to_currency order_book.total_price, unit: '₴', format: '%n %u', precision: 0 %>
  <% end %>
  Order total: <%= number_to_currency @order.subtotal, unit: '₴',
                                      format: '%n %u', precision: 0 %></th>







