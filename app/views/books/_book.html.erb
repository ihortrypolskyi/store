<div class="col-md-3 col-sm-6">
  <span class="thumbnail">
      			<img src="http://placehold.it/300x400" alt="...">
            <% if book.title.length <= 40 %>
                <h4><%= book.title %></h4>
            <% else %>
                <h6><%= book.title %></h6>
            <% end %>
      			<div class="ratings">
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star-empty"></span>
            </div>
            <div><% book.authors.each do |author| %>
          <span><%= author.first_name %>
                  <%= author.last_name %></span>
                <% end %></div>
      			<p><% book.categories.each do |category| %>
                  <%= link_to   category.name %>
               <% end %></p>
              <p class="price"><%= number_to_currency(book.price, unit: 'грн.', format: '%n %u') %></p>

              <hr class="line">
              <div class="row">
                <div class="col-md-5 col-sm-5 text-left">
                  <p><%= link_to 'see more', book_path(book), class: 'btn btn-primary' %></p>
                </div>
                <div class="col-md-5 col-sm-5 text-right">
                  <%= button_to 'Add to cart', add_to_cart_book_path(book), class:'btn btn-success right' %>
                </div>
              </div>
  </span>
</div>
