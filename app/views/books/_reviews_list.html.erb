<div class="reviews">
  <div class="well">
      <% if current_user %>
          <div class="text-center">
            <button class="btn btn-success" data-toggle="modal" data-target="#newReview_<% @review.id %>">
              <%= 'Leave your review here' %>
            </button>
          </div>
          <div class="modal fade" id="newReview_<% @review.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title no-reviews" id="myModalLabel">PLEASE FILL IN THE FORM BELOW:</h4>
                </div>
                <div class="modal-body">
                  <%= render 'reviews/form', book: @book, review: @review %>
                </div>
              </div>
            </div>
          </div>
      <% else %>
          <div class="list-group-item list-group text-center">
            <h4>Please login to leave a review</h4>
          </div>
      <%	end %>

        <% @reviews.each do |review| %>
              <hr>
              <div class="star-rating" class="pull-left" data-score= <%= review.rating %> ></div>
              <% if review.review_status_id == 1 && review.comment? %>
                  <div>
                    <em>This comment's passing moderation</em>
                    <br>
                  </div>
              <% else %>
                  <div>
                    <strong><em><%= review.comment %></em></strong>
                  </div>
              <% end %>
              <div class="pull-left user-contacts"><%= review.created_at.strftime("%d.%m.%Y at %H:%M ")%></div>
              <div class="pull-right user-contacts"><%= review.user.first_name %> <%= review.user.last_name %></div>
        <% end %>
    <br>
    <div class="row text-center paginate-reviews">
      <span class="paginate-reviews-remove"><%= render 'shared/paginate_reviews' %></span>
    </div>
  </div>
</div>

<script>
    $('.star-rating').raty({
        readOnly: true,
        score: function() {
            return $(this).attr('data-score');
        },
        path: '/assets/'
    });
</script>

